<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/navbar %>

    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <% include ../partials/card_message %>
    <% include ../partials/card_error %>

    <div class="row">

    <% if (menus) {
        menus.forEach( menu => {
    %>
          <div class="col s3 m3">
            <div class="card">
              <div class="card-image">
                <img src="images/<%= menu.image %>">

                <form method="post" action="/users/order">
                  <input type="hidden" name="menu_id" value="<%= menu.id %>">
                  <input class="btn-floating halfway-fab waves-effect waves-light red" type="submit" value="+">

                </form>

              </div>
              <div class="card-content">
              <span class="card-title"><%= menu.name %></span>

                <p>Rp. <%= menu.price %></p>
              </div>
            </div>
          </div>
    <%
        })
      } // end of if menus
    %>
  </div>



  </body>
</html>
